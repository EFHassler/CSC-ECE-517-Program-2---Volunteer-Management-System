<p style="color: green"><%= notice %></p>

<% content_for :title, "Volunteers" %>

<h1>Volunteers</h1>

<div id="volunteers">
  <% @volunteers.each do |volunteer| %>
    <%= render volunteer %>
    <p>
      <%= link_to "Show this volunteer", volunteer %>
      <% if admin_signed_in? %>
        | <%= button_to "Delete this volunteer", volunteer, method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </p>
  <% end %>
</div>

<%= link_to "New volunteer", new_volunteer_path %> |
<%= link_to "Back to Admin", admin_path %>
