<p style="color: green"><%= notice %></p>

<%= render @volunteer %>

<div>
  <%= link_to "Edit this volunteer", edit_volunteer_path(@volunteer) %> |
  <%= link_to "Available events", available_events_path %> |
  <%= link_to "My assignments", volunteer_assignments_path %> |
  <%= link_to "Back", (volunteer_signed_in? ? volunteer_path(current_volunteer) : root_path) %>
  <% if admin_signed_in? && !volunteer_signed_in? %>
    | <%= link_to "Back to Admin", admin_path %>
  <% end %>

  <%= button_to "Destroy this volunteer", @volunteer, method: :delete %>
</div>
