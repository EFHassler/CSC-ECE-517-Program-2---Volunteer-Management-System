<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2>Login</h2>
        </div>
        <div class="card-body">
          <%= form_with url: login_path, method: :post do |f| %>
            <div class="mb-3">
              <%= f.label :username, "Username", class: "form-label" %>
              <%= f.text_field :username, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", required: true %>
            </div>

            <div class="d-grid">
              <%= f.submit "Login", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <p class="mb-0">New volunteer? <%= link_to "Sign up", new_volunteer_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>
