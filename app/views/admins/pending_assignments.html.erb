<p style="color: green"><%= notice %></p>

<% content_for :title, "Pending Assignments" %>

<div style="padding: 20px; max-width: 1200px; margin: 0 auto;">
  <h1>Pending Volunteer Assignments</h1>
  <p>Review and approve pending volunteer assignments below.</p>

  <% if @pending_assignments.any? %>
    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
      <thead style="background-color: #f5f5f5; border-bottom: 2px solid #ddd;">
        <tr>
          <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Volunteer</th>
          <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Event</th>
          <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Date</th>
          <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @pending_assignments.each do |assignment| %>
          <tr style="border-bottom: 1px solid #ddd;">
            <td style="padding: 12px; border: 1px solid #ddd;">
              <%= link_to assignment.volunteer.full_name, volunteer_path(assignment.volunteer) %>
            </td>
            <td style="padding: 12px; border: 1px solid #ddd;">
              <%= assignment.event.title %>
            </td>
            <td style="padding: 12px; border: 1px solid #ddd;">
              <%= assignment.event.event_date&.strftime("%b %d, %Y") || "TBD" %>
            </td>
            <td style="padding: 12px; border: 1px solid #ddd;">
              <%= link_to "View", volunteer_assignment_path(assignment) %> |
              <%= link_to "Approve", edit_volunteer_assignment_path(assignment) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p style="margin-top: 20px; color: #666;">No pending assignments. All assignments have been reviewed.</p>
  <% end %>

  <div style="margin-top: 20px;">
    <%= link_to "â† Back to Admin", admin_path %>
  </div>
</div>
