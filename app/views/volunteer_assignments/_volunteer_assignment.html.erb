<div id="<%= dom_id volunteer_assignment %>">
  <div>
    <strong>Volunteer:</strong>
    <%= link_to volunteer_assignment.volunteer.full_name, volunteer_path(volunteer_assignment.volunteer) %>
    <span style="color: #666;">(ID: <%= volunteer_assignment.volunteer_id %>)</span>
  </div>

  <div>
    <strong>Event:</strong>
    <%= link_to volunteer_assignment.event.title, event_path(volunteer_assignment.event) %>
    <span style="color: #666;">(ID: <%= volunteer_assignment.event_id %>)</span>
  </div>

  <div>
    <strong>Status:</strong>
    <span style="padding: 2px 8px; border-radius: 3px; <%= case volunteer_assignment.status
      when 'pending' then 'background-color: #ffc107; color: white;'
      when 'approved' then 'background-color: #28a745; color: white;'
      when 'completed' then 'background-color: #007bff; color: white;'
      when 'cancelled' then 'background-color: #dc3545; color: white;'
      end %>">
      <%= volunteer_assignment.status.capitalize %>
    </span>
  </div>

  <div>
    <strong>Hours worked:</strong>
    <%= volunteer_assignment.hours_worked || "Not logged yet" %>
  </div>

  <div>
    <strong>Date logged:</strong>
    <%= volunteer_assignment.date_logged&.strftime("%b %d, %Y") || "Not logged yet" %>
  </div>

</div>
